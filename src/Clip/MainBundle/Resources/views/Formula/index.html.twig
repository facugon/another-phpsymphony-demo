{% extends 'ClipMainBundle::layout.html.twig' %}

{% block main -%}
<h1>Formula list</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Datestart</th>
            <th>Dateend</th>
            <th>Agemin</th>
            <th>Agemax</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('formula_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{% if entity.dateStart %}{{ entity.dateStart|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.dateEnd %}{{ entity.dateEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.ageMin }}</td>
            <td>{{ entity.ageMax }}</td>
            <td>
                <ul>
                    <li>
                    <a href="{{ path('formula_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                    <a href="{{ path('formula_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
    <a href="{{ path('formula_new') }}">
        Create a new entry
    </a>
    </li>
</ul>
{% endblock %}
