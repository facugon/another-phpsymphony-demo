{% extends '::layout.html.twig' %}

{% block main %}
<div class="container">
    <h1>Step 2 - Available Formulas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date Start</th>
                <th>Date End</th>
                <th>Age Min</th>
                <th>Age Max</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in formulas %}
            <tr>
                <td><a href="{{ path('formula_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{% if entity.dateStart %}{{ entity.dateStart|date('d-m-Y') }}{% endif %}</td>
                <td>{% if entity.dateEnd %}{{ entity.dateEnd|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.ageMin }}</td>
                <td>{{ entity.ageMax }}</td>
                <td>
                    <ul>
                        <li>
                        <a href="{{ path('subscription_subscribe', {'idParticipant': participant.id, 'idFormula': entity.id}) }}">Subscribe!</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
