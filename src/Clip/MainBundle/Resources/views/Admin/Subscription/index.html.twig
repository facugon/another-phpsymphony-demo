{% extends 'ClipMainBundle:Admin:layout.html.twig' %}

{% block main -%}
    <h1>Subscription list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Participant</th>
                <th>Formula</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('subscription_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('participant_show', { 'id': entity.participant.id }) }}">{{ entity.participant.firstname }} {{ entity.participant.lastname }}</a></td>
                <td>{{ entity.formula.name }}</td>
                <td>{{ entity.state.description }}</td>
                <td>
                <ul>
                    {% if entity.state.id == 1 %}
                    <li>
                    <a href="{{ path('subscription_confirm', { 'id': entity.id }) }}">confirm</a>
                    </li>
                    {% endif %}
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
